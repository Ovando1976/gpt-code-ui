{
  "name": "gpt-code-ui (node20)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-vscode.vscode-typescript-next",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "forwardPorts": [3000, 3001],
  "workspaceFolder": "/workspaces/gpt-code-ui",
  "updateContentCommand": "bash -lc 'echo container built'",
  "containerEnv": {
    "NVM_DIR": "/home/vscode/.nvm"
  },
  "remoteUser": "vscode",
  "postCreateCommand": "bash -lc 'cd frontend && npm ci || true'",
  "shutdownAction": "stopContainer"
}